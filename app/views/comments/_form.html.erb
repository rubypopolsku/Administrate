<%= form_with(model: [@post,  @post.comments.new], local: true) do |form| %> 
    <div class="field">
        <%= form.label :author %>
        <%= form.text_field :author %>
    </div>
    <div class="field">
        <%= form.label :body %>
        <%= form.text_area :body %>
    </div>
    <div class="actions"> 
        <%= form.submit %>
    </div>
<% end %>